<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="量子项目测试程序" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="ButtonStyle">
        <Button
            android:id="@+id/get_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GetVersion" />
        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="getversion"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="ButtonStyle">
        <Button
            android:id="@+id/read_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ReadKey" />
        <TextView
            android:id="@+id/tv_key1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offset " />
        <EditText
            android:id="@+id/et_read_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="readoffset"
            android:text="0" />
        <TextView
            android:id="@+id/tv_key11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="length " />
        <EditText
            android:id="@+id/et_read_len"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="readlength"
            android:text="5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="ButtonStyle">
        <Button
            android:id="@+id/input_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="InputKey" />
        <EditText
            android:id="@+id/et_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="inputkey"
            android:text="" />
        <TextView
            android:id="@+id/tv_key2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Offset "
            android:text="" />
        <EditText
            android:id="@+id/et_key_off"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="ButtonStyle">
        <Button
            android:id="@+id/write_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SendData" />
        <EditText
            android:id="@+id/et_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="transmitdata"
            android:text="" />
        <TextView
            android:id="@+id/tv_data11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="getlength" />
        <EditText
            android:id="@+id/et_get_len"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="5" />
    </LinearLayout>

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>
